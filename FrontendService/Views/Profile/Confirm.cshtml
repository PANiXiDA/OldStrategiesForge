@model ConfirmViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Account Confirmation</title>
    <meta charset="utf-8" />
</head>
<body>
    @if (Model.IsExpired)
    {
        <h1>Sorry, your confirmation link has expired.</h1>
    }
    else
    {
        <h1>Congratulations, @Model.Nickname! Your account has been successfully verified.</h1>
    }
</body>
</html>
